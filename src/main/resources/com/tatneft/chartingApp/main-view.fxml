<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tatneft.chartingApp.Controller">
   <left>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Выберите тип графика" textAlignment="CENTER" />
            <ChoiceBox prefWidth="150.0" />
            <TextField promptText="Введите данные" />
            <TextField promptText="Введите данные" />
            <TextField promptText="Введите данные" />
            <TextField promptText="Введите данные" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <BarChart fx:id="mainChart" BorderPane.alignment="CENTER">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </BarChart>
   </center>
   <right>
      <AnchorPane fx:id="chartAnc" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
